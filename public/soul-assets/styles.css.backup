:root {
	--bg: #0f1115;
	--fg: #e6e6e6;
	--muted: #9aa4af;
	--primary: #6ea8fe;
	--secondary: #2b313b;
	--accent: #ffd166;
	--danger: #ff6b6b;
	--success: #51cf66;
}

* { box-sizing: border-box; }
body {
	margin: 0;
	font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica,Arial,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol;
	background: var(--bg);
	color: var(--fg);
}

.app-header {
	display: flex; justify-content: space-between; align-items: center;
	padding: 12px 16px; border-bottom: 1px solid #222;
	background: #0b0d12;
	position: sticky; top: 0; z-index: 10;
}
.logo { width: 24px; height: 24px; margin-right: 8px; filter: invert(1); }
.title { display: flex; align-items: center; gap: 8px; font-weight: 600; }
.actions { display: flex; align-items: center; gap: 12px; }
.relation { display: flex; align-items: center; gap: 8px; }
.meter { width: 140px; height: 8px; background: #222; border-radius: 8px; overflow: hidden; }
.meter-bar { height: 100%; background: linear-gradient(90deg, #6ea8fe, #51cf66); }

.primary, .secondary, .icon-btn {
	background: var(--primary); color: #000; border: none; border-radius: 8px;
	padding: 10px 14px; cursor: pointer; font-weight: 600;
}
.secondary { background: var(--secondary); color: var(--fg); }
.small { padding: 6px 10px; font-size: 12px; }
.icon-btn { background: transparent; color: var(--fg); font-size: 20px; padding: 6px 8px; }
button:disabled { opacity: 0.6; cursor: not-allowed; }

.container {
	display: grid; grid-template-columns: 280px 1fr; gap: 12px;
	padding: 12px; max-width: 1200px; margin: 0 auto;
}
.persona {
	background: #0b0f15; border: 1px solid #1b2230; border-radius: 12px; padding: 12px;
}
.hidden { display: none; }
.persona h3 { margin: 8px 0 12px; }
.toggle { margin-top: 8px; }

.chat {
	background: #0b0f15; border: 1px solid #1b2230; border-radius: 12px; padding: 12px;
	display: flex; flex-direction: column; gap: 12px;
	min-height: 70vh;
}
.tip {
	font-size: 13px; color: var(--accent);
	background: rgba(255, 209, 102, 0.08);
	border: 1px dashed rgba(255, 209, 102, 0.5);
	padding: 6px 8px; border-radius: 8px;
}
.tip-row { display: flex; align-items: center; gap: 8px; }
.tip-row .tip { flex: 1; }
.messages {
	flex: 1; overflow: auto; display: flex; flex-direction: column; gap: 8px;
	padding: 8px; background: #0d121a; border-radius: 8px; border: 1px solid #111720;
}
.bubble {
	max-width: 70%; padding: 8px 10px; border-radius: 10px; line-height: 1.4;
}
.me { align-self: flex-end; background: #173459; border: 1px solid #214a7e; }
.peer { align-self: flex-start; background: #1b2a3a; border: 1px solid #23364a; }
.foot { font-size: 12px; color: var(--muted); margin-top: 2px; }

.candidates { display: grid; grid-template-columns: repeat(3, 1fr); gap: 8px; }
.card {
	background: #0f1520; border: 1px solid #1b2230; border-radius: 10px; padding: 10px;
	display: flex; flex-direction: column; gap: 6px; cursor: pointer;
}
.card:hover { border-color: #2d3950; }
.card .why { font-size: 12px; color: var(--muted); }
.risk-low { color: var(--success); }
.risk-mid { color: #ffd166; }
.risk-high { color: var(--danger); }

.input-area { display: flex; flex-direction: column; gap: 8px; }
textarea {
	width: 100%; resize: vertical; min-height: 60px; max-height: 140px;
	background: #0f1520; border: 1px solid #1b2230; border-radius: 8px;
	color: var(--fg); padding: 8px 10px;
}
.input-actions { display: flex; justify-content: space-between; align-items: center; }

.modal {
	position: fixed; inset: 0; background: rgba(0,0,0,0.5);
	display: flex; align-items: center; justify-content: center;
}
.modal-content {
	width: min(720px, 92vw); background: #0b0f15; border: 1px solid #1b2230;
	border-radius: 12px; padding: 12px;
}
.modal-header { display: flex; align-items: center; justify-content: space-between; }
.modal-body { display: flex; flex-direction: column; gap: 12px; }
.quiz-item { padding: 8px; border: 1px solid #1b2230; border-radius: 8px; background: #0f1520; }
.quiz-result { border: 1px solid #1b2230; border-radius: 8px; padding: 8px; background: #0f1520; }

/* 修复：当 modal 同时带有 hidden 类时，强制隐藏 */
.modal.hidden { display: none !important; }

/* 回复选择卡片UI */
.reply-selection-container {
	position: fixed;
	inset: 0;
	z-index: 100;
	display: flex;
	align-items: center;
	justify-content: center;
}

.reply-selection-overlay {
	position: absolute;
	inset: 0;
	background: rgba(0, 0, 0, 0.75);
	backdrop-filter: blur(4px);
}

.reply-selection-panel {
	position: relative;
	width: min(900px, 90vw);
	max-height: 80vh;
	background: #0b0f15;
	border: 2px solid #2d3950;
	border-radius: 16px;
	padding: 20px;
	box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
	overflow-y: auto;
}

.reply-selection-header {
	margin-bottom: 16px;
	text-align: center;
}

.reply-selection-header h4 {
	margin: 0;
	font-size: 18px;
	color: var(--fg);
	font-weight: 600;
}

.reply-selection-cards {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 16px;
}

.reply-card {
	background: #0f1520;
	border: 2px solid #1b2230;
	border-radius: 12px;
	padding: 16px;
	display: flex;
	flex-direction: column;
	gap: 12px;
	transition: all 0.2s ease;
	cursor: pointer;
}

.reply-card:hover {
	border-color: var(--primary);
	transform: translateY(-2px);
	box-shadow: 0 4px 12px rgba(110, 168, 254, 0.2);
}

.reply-card-header {
	display: flex;
	align-items: center;
	gap: 8px;
}

.reply-emoji {
	font-size: 24px;
	line-height: 1;
}

.reply-label {
	font-size: 14px;
	font-weight: 600;
}

.reply-text {
	font-size: 15px;
	color: var(--fg);
	line-height: 1.5;
	min-height: 50px;
	flex: 1;
}

.reply-why {
	font-size: 12px;
	color: var(--muted);
	background: rgba(154, 164, 175, 0.08);
	padding: 8px;
	border-radius: 6px;
	border-left: 2px solid var(--muted);
}

.reply-select-btn {
	background: var(--primary);
	color: #000;
	border: none;
	border-radius: 8px;
	padding: 10px 14px;
	cursor: pointer;
	font-weight: 600;
	font-size: 14px;
	transition: all 0.2s ease;
}

.reply-select-btn:hover {
	background: #5a96e6;
	transform: scale(1.02);
}

.reply-select-btn:active {
	transform: scale(0.98);
}

/* 响应式设计 */
@media (max-width: 900px) {
	.container { grid-template-columns: 1fr; }
	.persona { order: 2; }

	.reply-selection-cards {
		grid-template-columns: 1fr;
	}

	.reply-selection-panel {
		width: 95vw;
		max-height: 90vh;
		padding: 16px;
	}
}

@media (max-width: 600px) {
	.reply-card {
		padding: 12px;
	}

	.reply-emoji {
		font-size: 20px;
	}

	.reply-label {
		font-size: 13px;
	}

	.reply-text {
		font-size: 14px;
		min-height: 40px;
	}

	.reply-select-btn {
		padding: 8px 12px;
		font-size: 13px;
	}
}

